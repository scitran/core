{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name":           { "type": "string" },
    "created":        {},
    "modified":       {},
    "type":           { "type": "string" },
    "mimetype":       { "type": "string" },
    "size":           { "type": "integer" },
    "hash":           { "type": "string" },
    "modality":       { "type": "string" },
    "classification": {
      "type": "object",
    },
    "tags": {
      "items": { "type": "string"},
      "type": "array",
      "uniqueItems": true
    },
    "info": {
      "type": "object"
    }
  },
  "required": ["name", "created", "modified", "size", "hash"],
  "key_fields": ["name"],
  "additionalProperties": false
}
